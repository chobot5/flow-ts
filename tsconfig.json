{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["es2020", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"]
}
