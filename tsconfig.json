{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"]
}
